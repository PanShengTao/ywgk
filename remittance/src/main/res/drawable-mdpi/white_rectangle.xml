<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#ffffffff" />
            <item android:name="android:shadowDx">0</item>
            <item android:name="android:shadowDy">2</item>
            <item android:name="android:shadowColor">#33000000</item>
            <corners android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp" android:topLeftRadius="2dp" android:topRightRadius="2dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#f7f1e5" />
            <item android:name="android:shadowDx">0</item>
            <item android:name="android:shadowDy">2</item>
            <item android:name="android:shadowColor">#33000000</item>
            <corners android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp" android:topLeftRadius="2dp" android:topRightRadius="2dp" />
        </shape>
    </item>

</selector>

